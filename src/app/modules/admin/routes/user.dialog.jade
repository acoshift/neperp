.ui.long.modal(#modal)
  .header {{header}}
  .content
    form.ui.form([ngFormModel]="model", autocomplete="off")
      .field([class.error]="valid('name')")
        label Name:
        input([ngFormControl]="model.find('name')")
      .field([class.error]="valid('pwd')")
        label Password:
        input([ngFormControl]="model.find('pwd')", type="password")
      .field
        .ui.checkbox
          input.hidden([ngFormControl]="model.find('enabled')", type="checkbox")
          label Enabled
      .field([class.error]="valid('role')")
        label Role:
        .ui.selection.search.dropdown([ngFormControl]="model.find('role')")
          input(type="hidden")
          i.dropdown.icon
          .default.text Select Role
          .menu
            .item(*ngFor="#role of roles", [attr.data-value]="role._id") {{role.name}}
  .actions
    .ui.cancel.button Cancel
    .ui.primary.ok.button([class.loading]="loading") {{button}}
