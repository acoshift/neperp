.ui.long.modal(#modal)
  .header {{header}}
  .content
    form.ui.form([ngFormModel]="model")
      .field([class.error]="valid('name')")
        label Name:
        input(ngControl="name")
      .field([class.error]="valid('group')")
        label Group:
        .ui.selection.search.dropdown(ngControl="group")
          input(type="hidden")
          i.dropdown.icon
          .default.text Select Group
          .menu
            .item(*ngFor="#group of groups", [attr.data-value]="group._id") {{group.name}}
      .field([class.error]="valid('brand')")
        label Brand:
        .ui.selection.search.dropdown(ngControl="brand")
          input(type="hidden")
          i.dropdown.icon
          .default.text Select Brand
          .menu
            .item(*ngFor="#brand of brands", [attr.data-value]="brand._id") {{brand.name}}
      .field([class.error]="valid('price')")
        label Price:
        input(ngControl="price")
      .field([class.error]="valid('point')")
        label Point:
        input(ngControl="point")
      .field([class.error]="valid('remark')")
        label Remark:
        input(ngControl="remark")
  .actions
    .ui.cancel.button Cancel
    .ui.primary.ok.button([class.loading]="loading") {{button}}
