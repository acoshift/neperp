{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "files": [
    "src/app/bootstrap.ts",
    "src/app/services.ts",
    "src/app/components.ts",
    "src/app/components/home.ts",
    "src/app/components/header.ts",
    "src/app/components/footer.ts",
    "src/app/components/auth/login.ts",
    "src/app/services/auth.ts",
    "src/app/services/db.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
